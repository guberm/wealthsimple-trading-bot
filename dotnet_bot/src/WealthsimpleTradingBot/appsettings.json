{
  "Wealthsimple": {
    "BaseUrl": "https://trade-service.wealthsimple.com"
  },
  "Trading": {
    "Mode": "DryRun",
    "LiveModeConfirmation": false,
    "AccountType": "ca_tfsa"
  },
  "Schedule": {
    "Enabled": true,
    "CronExpressions": [
      "0 35 9 ? * MON-FRI",
      "0 30 11 ? * MON-FRI",
      "0 30 13 ? * MON-FRI",
      "0 30 15 ? * MON-FRI"
    ],
    "Timezone": "America/Toronto"
  },
  "StockPicker": {
    "NumPicks": 7,
    "MinMarketCapMillions": 500,
    "MinAvgVolume": 100000,
    "LookbackDays": 90,
    "SectorDiversity": true,
    "MaxPerSector": 2,
    "PreferEtfs": true
  },
  "Rebalancer": {
    "WeightStrategy": "Equal",
    "DriftThresholdPct": 5.0,
    "MinTradeValueCad": 1.00
  },
  "Safety": {
    "MaxSingleTradeCad": 5000.00,
    "MaxDailyTrades": 20,
    "RateLimitPerHour": 6,
    "RequireConfirmationAboveCad": 1000.00
  },
  "StockUniverse": {
    "Etfs": [
      "XIC.TO", "XIU.TO", "ZSP.TO", "VFV.TO", "XGRO.TO",
      "VGRO.TO", "ZAG.TO", "XBB.TO", "VCN.TO", "ZEB.TO",
      "XEI.TO", "ZDV.TO", "VDY.TO", "ZRE.TO", "XRE.TO"
    ],
    "Stocks": [
      "RY.TO", "TD.TO", "BNS.TO", "ENB.TO", "CNR.TO",
      "CP.TO", "SU.TO", "BAM.TO", "SHOP.TO", "BCE.TO",
      "T.TO", "MFC.TO", "CSU.TO", "ATD.TO", "WCN.TO"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Quartz": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/trading_bot-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}
